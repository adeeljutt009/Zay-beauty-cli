<div data-section-id="{{ section.id }}" data-section-type="grid-banner-type-10" class="grid-banner-type-10"> 
  <div class="container">
    <div class="dt-sc-hr-invisible-large"></div>
    <div class="grid-uniform featuredItems" style="float:left;width:100%;{% if section.settings.image_bg != blank %} background-image:url('{{ section.settings.image_bg | img_url: 'master' }}');background-repeat:no-repeat;background-position:left top; {% endif %} background-color:{{ section.settings.bg_color }};"> 
        {% if section.settings.heading != blank or section.settings.sub_heading  %}
        <div class="border-title text-center wow fadeInDown animated">
        {% if section.settings.sub_heading != blank %} <h6 class="small-title" style="color:{{ section.settings.sub_heading_clr }}">{{ section.settings.sub_heading }}</h6> {% endif %}
        {% if section.settings.heading != blank %}  <h2 class="" style="color:{{ section.settings.heading_clr }}">{{ section.settings.heading }}</h2> {% endif %}
        </div>
        <div class="dt-sc-hr-invisible-small"></div>
        {% endif %}
        <div class="container">
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center banner-block wow animated fadeInUp">     
          <div class="ovrly31 overlay_1">
            <div class="banner-img">        
              {% if section.settings.link_1 != blank %}<a class="banner_half_img" href="{{ section.settings.link_1 }}">{% endif%}
              {% if section.settings.image_1 != blank %}
              <img src="{{ section.settings.image_1 | img_url: 'master' }}" alt="{{ section.settings.title_1 }}" />
              <div class="testoverlay"></div>
              {% else %}
              <img src="//via.placeholder.com/240x364" />
              {% endif%}           
              {% if section.settings.link_1 != blank %}  
              </a>
              {% endif%}
            </div>
          </div>
          <div class="featured-content"> 
            {% if section.settings.title_1_sub != blank %}
            <h4 style="color:{{ section.settings.title_1_clr_sub }}"><a href="{{ section.settings.link_1 }}">{{ section.settings.title_1_sub }}</a></h4>
            {% endif %}
            {% if section.settings.text_1 != blank %}
            <p style="color:{{ section.settings.text_1_clr }};">{{ section.settings.text_1}}</p>    
            {% endif %}  
            {% if section.settings.button_1 != blank %}
            <a class="btn one" href="{{ section.settings.link_1 }}">{{ section.settings.button_1}}</a>    
            {% endif %}         
          </div>
        </div>   
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center banner-block wow animated fadeInUp">
          <div class="ovrly31 overlay_2 animated fadeInUp">
            <div class="banner-img">
              {% if section.settings.link_2 != blank %}<a class="banner_half_img" href="{{ section.settings.link_2 }}">{% endif%}
              {% if section.settings.image_2 != blank %}
              <img src="{{ section.settings.image_2 | img_url: 'master' }}" alt="{{ section.settings.title_2 }}" />
              <div class="testoverlay"></div>
              {% else %}
              <img src="//via.placeholder.com/240x364" />
              {% endif%}           
              {% if section.settings.link_2 != blank %}  </a>
              {% endif%}
            </div>
          </div>
          <div class="featured-content">   
            {% if section.settings.title_2_sub != blank %}
            <h4 style="color:{{ section.settings.title_2_clr_sub }}"><a href="{{ section.settings.link_2 }}">{{ section.settings.title_2_sub }}</a></h4>
            {% endif %}
            {% if section.settings.text_2 != blank %}
            <p style="color:{{ section.settings.text_2_clr }};">{{ section.settings.text_2}}</p>    
            {% endif %}  
            {% if section.settings.button_2 != blank %}
            <a class="btn two" href="{{ section.settings.link_2 }}">{{ section.settings.button_2}}</a>    
            {% endif %}         
          </div> 
        </div>      
        <div class="grid__item wide--one-third post-large--one-third large--one-third medium--grid__item small--grid__item small--text-center banner-block wow animated fadeInUp">
          <div class="middle-top animated fadeInUp">  
            <div class="ovrly31 overlay_3">
              <div class="banner-img">
                {% if section.settings.link_3 != blank %}<a class="banner_half_img" href="{{ section.settings.link_3 }}">{% endif%}
                {% if section.settings.image_3 != blank %}
                <img src="{{ section.settings.image_3 | img_url: 'master' }}" alt="{{ section.settings.title_3 }}" />
                <div class="testoverlay"></div>
                {% else %}
                <img src="//via.placeholder.com/240x364" />
                {% endif%}           
                {% if section.settings.link_3 != blank %}  </a>
                {% endif%}
              </div>
            </div>

            <div class="featured-content">        
              {% if section.settings.title_3_sub != blank %}
              <h4 style="color:{{ section.settings.title_3_clr_sub }}"><a href="{{ section.settings.link_3 }}">{{ section.settings.title_3_sub }}</a></h4>
              {% endif %}
              {% if section.settings.text_3 != blank %}
              <p style="color:{{ section.settings.text_3_clr }};">{{ section.settings.text_3}}</p>    
              {% endif %}  
              {% if section.settings.button_3 != blank %}
              <a class="btn three" href="{{ section.settings.link_3 }}">{{ section.settings.button_3}}</a>    
              {% endif %}         
            </div>  

          </div>
        </div>
      </div> 
      <div class="dt-sc-hr-invisible-large"></div>
    </div>   
  </div>

</div>
<style>
  .grid-banner-type-10 .grid__item:first-child h5 a { color:{{ section.settings.title_1_clr }}; }
  .grid-banner-type-10 .grid__item:first-child:hover h5 a { color:{{ section.settings.title_1_hover_clr }}; }
  .grid-banner-type-10 .grid__item:nth-child(2n) h5 a { color:{{ section.settings.title_2_clr }}; }
  .grid-banner-type-10 .grid__item:nth-child(2n):hover h5 a { color:{{ section.settings.title_2_hover_clr }}; }
  .grid-banner-type-10 .grid__item:nth-child(3n) h5 a { color:{{ section.settings.title_3_clr }}; }
  .grid-banner-type-10 .grid__item:nth-child(3n):hover h5 a { color:{{ section.settings.title_3_hover_clr }}; }
  {% if section.settings.heading_image_need %}  .grid-banner-type-10 .border-title:after {  content:"";background-image:url({{ section.settings.heading_image | img_url: 'master' }});display:inline-block;background-repeat:no-repeat;width:105px;height:17px;} {% endif %}
  .grid-banner-type-10 .banner-img h4{background:{{section.settings.title_bg_color}};}
  .grid-banner-type-10 .banner-img h4::before{border-bottom: 10px solid {{section.settings.title_bg_color}};}
  .grid-banner-type-10 .banner-img h4 a{color:{{section.settings.title_text_color}};}
  .grid-banner-type-10  .banner-block:hover h4{background-color:{{ section.settings.title_bg_color | color_modify: 'alpha', 0.7 }}; }
  .grid-banner-type-10 .banner-block:hover .banner-img h4::before{border-bottom: 10px solid {{section.settings.title_bghover_color}};}
  .grid-banner-type-10 .featured-content h4 a:hover{color:{{ section.settings.sub_heading_clr}};}

  
</style>

