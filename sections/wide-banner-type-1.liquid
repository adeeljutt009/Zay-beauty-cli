<div data-section-id="{{ section.id }}" data-section-type="wide-banner-type-1" class="wide-banner-type-1">  
  <div class="grid-uniform">          
    <div class="wide-banner-type-1-block" style="{% if section.settings.show_image_1 != blank %}background-image:url('{{ section.settings.image_1 | img_url: '1920X' }}');background-repeat:no-repeat;background-size:cover {% else %}background-color:{{section.settings.background_color}};{% endif%};">      
     <div class="dt-sc-hr-invisible-large"></div>
      <div class="container"> 
      <div class="wide-banner-type-1-content"> 
        <div class="wide-banner-type-1-section">
          <div class="wide-banner-type-1-rounded">
            {% if section.settings.logo != blank %} 
            <img style="margin:auto auto 15px;text-align:center;display:block;" src="{{ section.settings.logo | img_url: '100' }}');" alt="{{ section.settings.title_1 }}">      
            {% endif%}   
            {% if section.settings.title_1 != blank %}
            <h6 style="color:{{ section.settings.title_color }}">{{ section.settings.title_1 }}</h6>
            {% endif %}
            {% if section.settings.titleshadow_1 != blank %}
            <h2 style="color:{{ section.settings.shadowtext_color }}">{{ section.settings.titleshadow_1 }}</h2>
            {% endif %}                        
            {% if section.settings.text_1 != blank %}
            <p style="color:{{ section.settings.text_color }}">{{ section.settings.text_1 }}</p>
            {% endif %}
            {% if section.settings.button_1 != blank %}
            <a class="btn" href="{{ section.settings.link_1 }}" style="color:{{ section.settings.button_txt_color }};background-color:{{ section.settings.button_bg_color }};">{{ section.settings.button_1 }}</a>    
            {% endif %}         
          </div>
        </div> 
      </div>  
     </div>  
     <div class="dt-sc-hr-invisible-large"></div> 
    </div>
  </div>
</div>

<style>  
  
  .wide-banner-type-1-content a.btn:hover { background-color:{{ section.settings.hover_button_bg_color }} !important; color:{{ section.settings.hover_button_txt_color }} !important;}
  .wide-banner-type-1 .wide-banner-type-1-content h2 span { color:{{ section.settings.title_2_color }};}
  
</style>

