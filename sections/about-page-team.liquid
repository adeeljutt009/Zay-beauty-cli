<div data-section-id="{{ section.id }}" data-section-type="team-type" class="about-us team-type" style="float:left;width:100%;background:{{ section.settings.bg_color }};">  
  <div class="container">
    <div class="dt-sc-hr-invisible-large"></div> 
    <div class="border-title text-center">
      <h2 class="" style="color:{{ section.settings.heading_clr }}">{{ section.settings.heading }}</h2>
    </div>
    <div class="grid-uniform">        
      <ul class="ch-grid">
        {% if section.blocks.size > 0 %}      
        {% for block in section.blocks %}
        {% case section.blocks.size %}
        {% when 1 %}
        {%- assign team_column_width = 'one-whole text-center' -%}
        {% when 2 %}
        {%- assign team_column_width = 'wide--one-half post-large--one-half large--one-half medium--grid__item small-grid__item' -%}
        {% when 3 %}
        {%- assign team_column_width = 'wide--one-third post-large--one-third large--one-half medium--grid__item small-grid__item' -%}
        {% when 4 %}
        {%- assign team_column_width = 'wide--one-quarter post-large--one-half large--one-half medium--grid__item small-grid__item' -%}
        {% endcase %}
        <li class="grid__item {{ team_column_width }} wow fadeInUp">
          <div class="team-section">  
            <div class="ch-item" style="{% if block.settings.team_1_image != blank %}background-image: url('{{ block.settings.team_1_image | img_url: "master" }}'){% else %} background-color:{{block.settings.team_1_clr}};{% endif %} ">	
              <div class="ch-info-wrap">
                <div class="ch-info">
                  <div class="ch-info-front ch-img-1" style=" "></div>
                  <div class="ch-info-back">
                    <div class="team-detail">
                      {% if block.settings.team_1_name != blank %}
                      <h5>{{ block.settings.team_1_name  }}</h5>
                      {% endif %}								
                      {% if block.settings.team_1_job != blank %}
                      <span>{{ block.settings.team_1_job  }}</span>
                      {% endif %} 
                      <ul class="ourteam-social rounded-border">
                        {% if block.settings.team_1_fb != blank %}<li><a class="fab fa-twitter" href="{{ block.settings.team_1_fb }}" title="Twitter"></a></li>{% endif %}
                        {% if block.settings.team_1_tw != blank %}<li><a class="fab fa-facebook" href="{{ block.settings.team_1_tw }}" title="Facebook"></a></li>{% endif %}
                        {% if block.settings.team_1_gp != blank %}<li><a class="fab fa-google" href="{{ block.settings.team_1_gp }}" title="Google"></a></li>{% endif %}
                      </ul>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>

        {% endfor %}
        {% endif %}
      </ul>
      <style>
        
        .ourteam { position:relative;}
        .ourteam .ourteam-details {transition: 0.3s linear;}

        .team-detail h5{color: {{ section.settings.team_name_color }};}

        .team-detail span{color: {{ section.settings.team_job_color }};}

        .about-us .ourteam-social a {  border:none;color:{{ section.settings.socialicon_hover_color }};background:{{ section.settings.socialicon_bg_color }};}

        .about-us .ourteam-social a:hover{color:{{ section.settings.socialicon_color }}; background:{{ section.settings.socialicon_bg_hvr}};}

       
      </style>

      
    </div>
  </div>
</div>
